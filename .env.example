# GitHub CLI Configuration
GH_TOKEN=your-github-personal-access-token-here

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# AWS Configuration
# AWS profile to use for Terraform deployment
AWS_PROFILE=terraform-deploy

# Terraform Deploy User Credentials
# For the terraform-deploy IAM user created during AWS setup
# Note: General AWS access uses AWS CLI profiles (e.g., aws --profile terraform-deploy)
# TERRAFORM_AWS_ACCESS_KEY_ID=your-terraform-aws-access-key-id
# TERRAFORM_AWS_SECRET_ACCESS_KEY=your-terraform-aws-secret-access-key

# Backend Environment Variables
BACKEND_PORT=8000
BACKEND_ENV=production
BACKEND_DEBUG=false
BACKEND_SECRET_KEY=your-secret-key-here
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Frontend Environment Variables
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE="Durable Code Test"

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:password@localhost/dbname
REDIS_URL=redis://localhost:6379

# Docker Configuration
COMPOSE_PROJECT_NAME=durable-code
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# GitHub CLI Configuration
GITHUB_TOKEN=your-github-personal-access-token-here
